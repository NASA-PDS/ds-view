<web-app>
  <!--
    The product servlet answers queries for products. It delivers 
    actual product data as the response.
  -->
  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>gov.nasa.pds.portal.product.ProductServlet</servlet-class>
    <!-- All parameters are optional and default to the values below.
    <init-param>
      <param-name>aliasFileSpec</param-name>
      <param-value>/aliases.properties</param-value>
    </init-param>
    <init-param>
      <param-name>chunkSize</param-name>
      <param-value>8192</param-value>
    </init-param>
    <init-param>
      <param-name>preferredNamespace</param-name>
      <param-value>urn:eda:rmi:</param-value>
    </init-param>
    -->
  </servlet>

  <!-- 
    Preferred way of addressing the product servlet. This assumes the WAR 
    is named prod.war and deployed at /prod in the application server.
  -->
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
