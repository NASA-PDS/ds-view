<!-- Root element: ldap -->
<!ELEMENT ldap (url, baseDN, principalAttribute, password) >

<!-- URL to the LDAP server; URI syntax -->
<!ELEMENT url (#PCDATA)>

<!-- Base Distinguished Name for users on server; DN syntax -->
<!ELEMENT baseDN (#PCDATA)>

<!-- Name of attribute used to identify principals; attribute syntax -->
<!ELEMENT principalAttribute (#PCDATA)>

<!-- The user's cleartext password; syntax: printable characters. -->
<!ELEMENT password (#PCDATA)>

