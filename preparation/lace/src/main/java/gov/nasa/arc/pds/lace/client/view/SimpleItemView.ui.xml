<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:lace="urn:import:gov.nasa.arc.pds.lace.client.presenter">

	<g:FocusPanel ui:field="simpleItem" styleName="simpleItem noOutline">
		<g:HTMLPanel>
			<g:HorizontalPanel ui:field="horizontalPanel" verticalAlignment="middle" width="100%">
				<g:HTMLPanel ui:field="alertIcon" styleName="smallAlertIcon middle hidden"></g:HTMLPanel>
				<g:InlineLabel ui:field="label" styleName="label"></g:InlineLabel>
				<g:HTMLPanel ui:field="value" styleName="input-wrapper">
					<g:SuggestBox ui:field="textBox" />
				</g:HTMLPanel>
			</g:HorizontalPanel>
			<lace:ModificationButtonPresenter ui:field="modificationButton" visible="false"></lace:ModificationButtonPresenter>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder>
