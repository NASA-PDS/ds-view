<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

		<g:DockLayoutPanel ui:field="editorPanel" unit="PX">
			<g:north size="60">
				<g:HTML>
					<div class="editorTitle one-edge-shadow font extraLarge">
						<span ui:field="title"></span>
					</div>			
				</g:HTML>								
			</g:north>
			<g:center>
				<g:FlowPanel ui:field="content" styleName="editorContentPanel"></g:FlowPanel>	
			</g:center>
		</g:DockLayoutPanel>
</ui:UiBinder>