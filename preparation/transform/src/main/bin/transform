# Bourne Shell script that allows easy execution of the Transform Tool
# without the need to set the CLASSPATH or having to type in that
# long java command (java gov.nasa.pds.transform.TransformLauncher ...)

# Expects the Transform Tool jar file to be in the ../lib directory.

# Check if the JAVA_HOME environment variable is set.
if [ -z "${JAVA_HOME}" ]; then
   echo "The JAVA_HOME environment variable is not set." 1>&2
   exit 1
fi

# Setup environment variables.
SCRIPT_DIR=`dirname $0`
PARENT_DIR=`cd ${SCRIPT_DIR}/.. && pwd`
LIB_DIR=${PARENT_DIR}/lib

# Check for dependencies.
if [ ! -f ${LIB_DIR}/transform-*.jar ]; then
    echo "Cannot find Transform Tool jar file in ${LIB_DIR}" 1>&2
    exit 1
fi

# Finds the jar file in LIB_DIR and sets it to TRANSFORM_JAR.
TRANSFORM_JAR=`ls ${LIB_DIR}/transform-*.jar`

# Executes Transform Tool via the executable jar file
# Arguments are passed in to the tool via '$@'
"${JAVA_HOME}"/bin/java -Xms256m -Xmx1024m -Dcom.sun.media.jai.disableMediaLib=true -Doverwrite.output=true -Dexternal.programs.home=${PARENT_DIR}/external-programs -jar ${TRANSFORM_JAR} "$@"
