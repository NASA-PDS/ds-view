<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>src/package/resources</directory>
      <excludes>
        <exclude>bin/*</exclude>
        <exclude>examples/data/*.TAB</exclude>
        <exclude>examples/data/*.dat</exclude>
      </excludes>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>src/package/resources</directory>
      <includes>
        <include>examples/data/*.TAB</include>
        <include>examples/data/*.dat</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>src/package/resources/bin</directory>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
  	<fileSet>
  		<outputDirectory>doc/apidocs</outputDirectory>
  		<directory>target/site/apidocs</directory>
  		<directoryMode>0755</directoryMode>
      	<fileMode>0644</fileMode>
  	</fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>gov.nasa.pds:objectAccess</include>
        <include>org.slf4j:*</include>            
      </includes>
      <!--outputFileNameMapping>pds4-tools-${project.version}.jar</outputFileNameMapping-->
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <useProjectArtifact>true</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>      
    </dependencySet>
    <dependencySet>
      <outputDirectory>examples/src</outputDirectory>
      <includes>
        <include>gov.nasa.pds:objectAccess:*:sources</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>gov/nasa/pds/objectAccess/example/*</include>
        </includes>
      </unpackOptions>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
    </dependencySet>
  </dependencySets>
</assembly>
