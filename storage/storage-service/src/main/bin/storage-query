# Bourne Shell script that allows easy execution of the Storage Service Query
# Tool without the need to set the CLASSPATH or having to type in that long
# java command (java org.apache.oodt.cas.filemgr.tools.QueryTool ...)

# Expects the File Manager Query Tool jar file to be in the ../lib directory.

# Check if the JAVA_HOME environment variable is set.
if [ -z "${JAVA_HOME}" ]; then
   echo "The JAVA_HOME environment variable is not set." 1>&2
   exit 1
fi

# Setup environment variables.
SCRIPT_DIR=`dirname $0`
FILEMGR_HOME=`cd ${SCRIPT_DIR}/.. && pwd`
FILEMGR_URL=http://localhost:9000

export FILEMGR_HOME

# Execute the application.
"${JAVA_HOME}"/bin/java -Djava.ext.dirs=${FILEMGR_HOME}/lib \
  org.apache.oodt.cas.filemgr.tools.QueryTool --url ${FILEMGR_URL} "$@"
