# Bourne Shell script that allows easy execution of the Storage Service Client
# without the need to set the CLASSPATH or having to type in that long java
# command (java org.apache.oodt.cas.filemgr.system.XmlRpcFileManagerClient ...)

# Expects the File Manager Client jar file to be in the ../lib directory.

# Set the JAVA_HOME environment variable here in the script if it will 
# not be defined in the environment.
if [ -z ${JAVA_HOME} ] ; then
  export JAVA_HOME=/path/to/java/home
fi

# Setup environment variables.
SCRIPT_DIR=`dirname $0`
FILEMGR_HOME=`cd ${SCRIPT_DIR}/.. && pwd`
FILEMGR_URL=http://localhost:9000

export FILEMGR_HOME

# Create the File Manager support directories.
mkdir -p ${FILEMGR_HOME}/logs

# Execute the application.
# Added a slash to the Spring properties to resolve a striping of the first 
# character. Need to check with future versions of OODT to see if fixed.
${JAVA_HOME}/bin/java \
  -Djava.ext.dirs=${FILEMGR_HOME}/lib \
  -Dorg.apache.oodt.cas.filemgr.properties=${FILEMGR_HOME}/etc/filemgr.properties \
  -Djava.util.logging.config.file=${FILEMGR_HOME}/etc/logging.properties \
  -Dorg.apache.oodt.cas.cli.action.spring.config=/${FILEMGR_HOME}/policy/cmd-line-actions.xml \
  -Dorg.apache.oodt.cas.cli.option.spring.config=/${FILEMGR_HOME}/policy/cmd-line-options.xml \
  org.apache.oodt.cas.filemgr.system.XmlRpcFileManagerClient --url ${FILEMGR_URL} $*
