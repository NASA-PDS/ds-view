<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <g:HTMLPanel>
    	<g:HorizontalPanel ui:field="nsPanel" verticalAlignment="middle" styleName="wildcardPanels">
			<g:InlineLabel ui:field="nsLabel" text="Namespace:" />
			<g:ListBox ui:field="nsDropdown" />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="elementPanel" verticalAlignment="middle" styleName="wildcardPanels">
			<g:InlineLabel ui:field="elementLabel" text="Element name:" />
			<g:ListBox ui:field="elementDropdown" />
		</g:HorizontalPanel>
		<g:Label styleName="localSchemaLabel" text="Local schema files" />
		<g:FlowPanel ui:field="localSchemas" styleName="localSchemas" />
		<g:FormPanel ui:field="uploadForm" >
		  <g:HTMLPanel>
            <g:InlineLabel ui:field="file" text="Add local schema:"></g:InlineLabel>
            <g:FileUpload ui:field="upload" name="upload"></g:FileUpload>
            <g:SubmitButton text="Add" />
		  </g:HTMLPanel>
		</g:FormPanel>
		<g:FlowPanel styleName="popupButtonContainer">
			<g:Button ui:field="okButton" text="OK" />
			<g:Button ui:field="cancelButton" text="Cancel" />
		</g:FlowPanel>
	</g:HTMLPanel>

</ui:UiBinder> 