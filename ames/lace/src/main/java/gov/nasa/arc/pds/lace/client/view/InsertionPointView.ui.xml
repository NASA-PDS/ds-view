<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:FocusPanel ui:field="wrapperPanel">
    <g:FlowPanel ui:field="insertionPointPanel" styleName="insertionPointPanel">
    	<g:Label ui:field="dropTarget" styleName="dropTarget" />
    	<g:Label ui:field="pasteButton" styleName="pasteButton" title="Click to paste element contents" />
		<g:Label ui:field="plusButton" styleName="plusButton" title="Click to insert an element" />
		<g:FlowPanel ui:field="requiredPanel" styleName="panel">
			<g:HTMLPanel styleName="required">
				<g:HTMLPanel styleName="cube alert icon middle">
	    			<g:HTMLPanel styleName="alertIcon" />
	  			</g:HTMLPanel>
				<g:InlineLabel ui:field="requiredLabel" styleName="label font large middle" text="Choice: An element is required in this location" />
				<g:InlineLabel styleName="helpText" text="Click to choose" />
			</g:HTMLPanel>
		</g:FlowPanel>
		<g:FlowPanel ui:field="optionalPanel" styleName="panel">
			<g:HTMLPanel styleName="optional">
				<g:HTMLPanel styleName="dimmedCube icon middle" />
				<g:InlineLabel ui:field="optionalTitle" styleName="label font large middle" />	
				<g:InlineLabel styleName="helpText" text="Optional, click to include" />
			</g:HTMLPanel>
		</g:FlowPanel>
		<g:FlowPanel ui:field="anyPanel" styleName="panel">
			<g:HTMLPanel styleName="optional">
				<g:HTMLPanel styleName="dimmedCube icon middle" />
				<g:InlineLabel ui:field="anyLabel" styleName="label font large middle" text="Any: Click to insert an element" />	
				<g:InlineLabel styleName="helpText" text="Click to insert" />
			</g:HTMLPanel>	
		</g:FlowPanel>
	</g:FlowPanel>		
  </g:FocusPanel>
</ui:UiBinder> 