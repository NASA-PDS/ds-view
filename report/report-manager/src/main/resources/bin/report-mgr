# Bourne Shell script that allows easy execution of the Report Service Manager
# without the need to set the CLASSPATH or having to type in that long java
# command (java gov.nasa.pds.Class ...)

# Expects the Report Manager jar file to be in the ../lib directory.

# Check if the JAVA_HOME environment variable is set.
if [ -z "${JAVA_HOME}" ]; then
   echo "The JAVA_HOME environment variable is not set." 1>&2
   exit 1
fi

# Setup environment variables.
SCRIPT_DIR=`dirname $0`
PARENT_DIR=`cd ${SCRIPT_DIR}/.. && pwd`
LIB_DIR=${PARENT_DIR}/lib
CONF_DIR=${PARENT_DIR}/conf

# Check for dependencies.
if [ ! -f ${LIB_DIR}/report-manager-*.jar ]; then
    echo "Cannot find Report Manager jar file in ${LIB_DIR}" 1>&2
    exit 1
fi
if [ ! -f ${CONF_DIR}/logging.properties ]; then
	echo "Cannot find logging properties file in ${CONF_DIR}" 1>&2
	exit 1
fi

# Create log directory
if [ ! -d ${PARENT_DIR}/logs ]; then
	mkdir ${PARENT_DIR}/logs
fi

# Finds the jar file in LIB_DIR and sets it to REPORT_MGR_JAR.
REPORT_MGR_JAR=`ls ${LIB_DIR}/report-manager-*.jar`

# Find the logging properties file in CONF_DIR and sets it to LOG_PROPS
LOG_PROPS=`ls ${CONF_DIR}/logging.properties`

# Executes Search Core Indexer via the executable jar file
# Arguments are passed in to the tool via '$@'
"${JAVA_HOME}"/bin/java \
	-Djava.util.logging.config.file=${LOG_PROPS} \
	-jar ${REPORT_MGR_JAR} "$@"

