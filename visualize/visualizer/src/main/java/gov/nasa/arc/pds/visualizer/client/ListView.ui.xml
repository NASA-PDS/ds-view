<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:vis='urn:import:gov.nasa.arc.pds.visualizer.client'>

	<ui:image field='gradient' src='gradient_bg_dark.png'
		repeatStyle='Horizontal' />

	<ui:style>
	    
		.outer {
 		    /*	border: 1px solid orange;*/
			/* cursor: default; */
		}
		
		@sprite .mainListViewHeader {
			gwt-image: 'gradient';
			background-color: #d3d6dd;
			table-layout: fixed;
			width: 100%;
			height: 100%;
		}
		
		.mainListViewHeader td {
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			border-top: 1px solid #999;
			border-bottom: 1px solid #999;
		}
		
		.mainListViewTable {
			table-layout: fixed;
			width: 100%;
		}
		
		.mainListViewTable td {
			/*border-top: 14px solid #fff;*/
			/*border-bottom: 1px solid #fff;*/
			padding: 2px 0 2px 10px;
		}
		
		@external bottomImgAlign;
		.bottomImgAlign {
			vertical-align: text-bottom;
		}
		
		@external listViewImage;
		.listViewImage {
			max-width: 200px;
			max-height: 150px;
		}
		
		@external row0;
		.row0 {
			font-weight: bold;
			background-color: #d0e4fe;
		}
		
		@external onclickLabel;
		.onclickLabel {
			text-decoration: underline;
			color: blue;
			margin-right: 2em;
		}
		
		@external labTab;
		.labTab td {
			border-top: 1px solid #fff;
			border-left: 1px solid #fff;
			padding: 2px 0 2px 10px;
		}
	
		@external boldRow;
		.boldRow {
			font-weight: bold;
		}
		
		@external popupLabel;
		.popupLabel {
			height: 400px;
			width: 600px;
		}
		
		@external scaledPopupImage;
		.scaledPopupImage {
			height: 50%;
			width: 50%;
		}
	</ui:style>

	<ui:style field='selectionStyle'
		type='gov.nasa.arc.pds.visualizer.client.ListView.SelectionStyle'>
			.selectedRow {
				background: #F0F8FF;
			}
		</ui:style>

	<g:DockLayoutPanel styleName='{style.outer}' unit='EM'>
		<g:north size='2'>
			<g:FlexTable ui:field='header' styleName='{style.mainListViewHeader}'
				cellSpacing='0' cellPadding='0' />
		</g:north>

		<g:center size='40'>
			<g:ScrollPanel>
				<g:FlexTable ui:field='table' styleName='{style.mainListViewTable}'
					cellSpacing='0' cellPadding='0' />
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
