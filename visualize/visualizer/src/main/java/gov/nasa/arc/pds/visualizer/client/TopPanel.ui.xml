<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:vis='urn:import:gov.nasa.arc.pds.visualizer.client'>

	<ui:image field='logo' src='images/75px-Nasa-logo.gif' />

	<ui:style>
		.statusDiv {
			text-align: right;
			margin: 1em;
		}
		
		.linksDiv {
			text-align: right;
		}
		
		@sprite .logo {
			gwt-image: 'logo';
			position: absolute;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class='{style.logo}' />
		<div class="{style.statusDiv}">
			<div class='{style.linksDiv}'>
				<g:Anchor href='javascript:;' ui:field='helpLink'>Help</g:Anchor>
				&nbsp;
				<g:Anchor href='javascript:;' ui:field='dialogLink'>About</g:Anchor>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
