<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:vis='urn:import:gov.nasa.arc.pds.visualizer.client'>

  <ui:image field='logo' src='images/75px-Nasa-logo.gif'/>
  <ui:style>
  .panel {
    padding: 10px;
 	}

  .aboutText {
    text-align: left;
  }

  @sprite .logo {
    gwt-image: 'logo';
    float: left;
    padding-right: 1em;
  }

  .buttons {
    text-align: right;
  }
  </ui:style>

  <g:HTMLPanel width='38em' styleName='{style.panel}'>
    <div class='{style.logo}'/>

    <div class='{style.aboutText}'>
    This application allows visualizing PDS4 data archives.<br/>
    Responsible NASA Official: <a href="mail:jay.p.trimble@nasa.gov">Jay Trimble</a> <br/>
    Last Updated: June 2011<br/>
    Web Services by: ODIN - Ames<br/>
    </div>

    <div class='{style.buttons}'>
      <g:Button text='Close' ui:field='closeButton' />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
