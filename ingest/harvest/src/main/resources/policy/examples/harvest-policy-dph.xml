<?xml version="1.0" encoding="UTF-8"?>
<policy>
  <directories>
    <path>$HOME/dph_examples_513B/dph_example_products</path>
    <filePattern>*.xml</filePattern>
  </directories>
  <validation>
    <enabled>false</enabled>
  </validation>
  <accessUrls>
    <baseUrl>http://pds.nasa.gov/pds4</baseUrl>
    <baseUrl>file://pds/pds4/</baseUrl>
  </accessUrls>
  <candidates>
    <namespace prefix="dph" uri="http://pds.nasa.gov/schema/pds4/dph/v01"/>
    <productMetadata objectType="Product_Observational">
      <xPath>//Identification_Area/information_model_version</xPath>
      <xPath>//Identification_Area/Modification_History/Modification_Detail/modification_date</xPath>
      <xPath slotName="modification_version_id">//Identification_Area/Modification_History/Modification_Detail/version_id</xPath>
      <xPath slotName="modification_description">//Identification_Area/Modification_History/Modification_Detail/description</xPath>
      <xPath>//Observation_Area/Time_Coordinates/start_date_time</xPath>
      <xPath>//Observation_Area/Time_Coordinates/stop_date_time</xPath>
      <xPath>//Observation_Area/Time_Coordinates/local_mean_solar_time</xPath>
      <xPath>//Observation_Area/Time_Coordinates/local_true_solar_time</xPath>
      <xPath slotName="investigation_area_name">//Observation_Area/Investigation_Area/name</xPath>
      <xPath slotName="investigation_area_type">//Observation_Area/Investigation_Area/type</xPath>
      <xPath slotName="target_identification_name">//Observation_Area/Target_Identification/name</xPath>
      <xPath slotName="target_identification_type">//Observation_Area/Target_Identification/type</xPath>
      <xPath slotName="target_identification_description">//Observation_Area/Target_Identification/description</xPath>
      <xPath>//Observation_Area/Mission_Area/dph:spacecraft_clock_start_count</xPath>
      <xPath>//Observation_Area/Mission_Area/dph:spacecraft_clock_stop_count</xPath>
    </productMetadata>
    <productMetadata objectType="Product_Document">
      <xPath>//Identification_Area/information_model_version</xPath>
      <xPath>//Identification_Area/Modification_History/Modification_Detail/modification_date</xPath>
      <xPath slotName="modification_version_id">//Identification_Area/Modification_History/Modification_Detail/version_id</xPath>
      <xPath slotName="modification_description">//Identification_Area/Modification_History/Modification_Detail/description</xPath>
      <xPath>//Document_Desc/doi</xPath>
      <xPath>//Document_Desc/author_list</xPath>
      <xPath>//Document_Desc/acknowledgement_text</xPath>
      <xPath slotName="document_description">//Document_Desc/description</xPath>
      <xPath>//Document_Desc/publication_date</xPath>
    </productMetadata>
  </candidates>
</policy>

