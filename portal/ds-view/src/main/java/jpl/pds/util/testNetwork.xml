<!DOCTYPE network PUBLIC "-//JPL//DTD PDS-D Network 1.0.0//EN"
  "http://starbrite.jpl.nasa.gov/dtd/network.dtd">
<network username="global.user"
  password="global.pass"
  proxy="http://some.proxy/"
  default="mySet">

  <!-- SERVERS ========================================== -->
  <server id="server1"
    url="http://test1/">
    <label>Test Server</label>
    <os>FreeBSD 4.3</os>
    <repository dir="/usr/local/repository"/>
    <repository dir="/tmp"/>
    <installation dir="/usr/local/pds"/>
    <product>Widgets</product>
    <product>Wadgets</product>
    <contact uri="http://www.freebsd.org/">The FreeBSD Project</contact>
  </server>

  <server id="server2"
    url="http://test2/"
    username="local.user"
    proxy="http://another.proxy/">
    <label>Another Test Server</label>
    <label xml:lang="fr">Un autre serveur d'essai</label>
  </server>

  <server id="server3"
    url="http://test3/"
    password="local.pass"/>

  <!-- PROCESSES ======================================== -->

  <proc id="server1.test1" server="server1" name="t1">
    <label>Test 1 on server 1</label>
  </proc>

  <proc id="server1.test2" server="server1">
    <label>Test 2 on server 1</label>
  </proc>

  <proc id="server2.test1" server="server2" name="t1">
    <label>Test 1 on server 2</label>
  </proc>

  <!-- EXECUTION SEQUENCE =============================== -->

  <set id="mySet">
    <start>
      <seq procs="server1.test1 server2.test1"/>
      <seq procs="server1.test2"/>
    </start>

    <stop>
      <seq procs="server1.test2"/>
      <seq procs="server1.test1 server2.test1"/>
    </stop>
  </set>

</network>
