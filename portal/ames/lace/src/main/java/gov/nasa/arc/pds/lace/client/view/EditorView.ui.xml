<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

		<g:DockLayoutPanel ui:field="editorPanel" unit="PX">
			<g:north size="80">
				<g:HTMLPanel styleName="editorHeader">
					<div class="editorTitle one-edge-shadow font extraLarge">
						<g:HTMLPanel ui:field="typeIcon" styleName="icon middle">
			    			<g:HTMLPanel ui:field="alertIcon" styleName="alertIcon"></g:HTMLPanel>
			  			</g:HTMLPanel>
						<span ui:field="title"></span>
					<g:HTMLPanel ui:field="itemErrors" styleName="itemErrors hidden" />
					</div>
				</g:HTMLPanel>
			</g:north>
			<g:center>
				<g:FlowPanel ui:field="content" styleName="editorContentPanel"></g:FlowPanel>	
			</g:center>
		</g:DockLayoutPanel>
</ui:UiBinder>