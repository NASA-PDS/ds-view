<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             
    <g:FlowPanel styleName="startScreen">
    	<g:HTML ui:field="logoHolder" styleName="logoHolder"></g:HTML>
		<g:FlowPanel styleName="login dialog start glass">
			<g:HTML>
				<h1>Welcome to LACE</h1>
				<p class="title">The PDS4 Label Creation and Editing Tool</p>
				<p>Please log in to use LACE:</p>
			</g:HTML>
			<g:HTMLPanel>
				<label>Email address</label>
				<g:TextBox ui:field="userName" />
			</g:HTMLPanel>
			<g:FlowPanel styleName="btnContainer">
				<g:Button ui:field="loginButton" text="Login" styleName="btn"></g:Button>
			</g:FlowPanel>
		</g:FlowPanel>      
	</g:FlowPanel>		
</ui:UiBinder> 