<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:lace="urn:import:gov.nasa.arc.pds.lace.client.presenter">

	<g:HTMLPanel>
		<g:FocusPanel ui:field="simpleItem" styleName="simpleItem">
			<g:HTMLPanel>
				<g:HorizontalPanel ui:field="horizontalPanel" verticalAlignment="middle" width="100%">
					<g:HTMLPanel ui:field="alertIcon" styleName="field alert hidden">
						<g:HTMLPanel styleName="alertIcon small"></g:HTMLPanel>
					</g:HTMLPanel>
					<g:InlineLabel ui:field="label" styleName="label" />
					<g:HTMLPanel styleName="fieldWrapper">
						<g:HTMLPanel ui:field="outerWrapper" styleName="inputWrapper outer">
							<g:HTMLPanel ui:field="innerInputWrapper" styleName="inner" visible="false">
								<g:SuggestBox ui:field="textBox"/>
							</g:HTMLPanel>
							<g:HTMLPanel ui:field="buttonArrow" styleName="btnArw"><g:HTMLPanel styleName="arw"></g:HTMLPanel></g:HTMLPanel>
							<g:HTMLPanel ui:field="innerTextAreaWrapper" styleName="inner" visible="false">
								<g:TextArea ui:field="textArea" visibleLines="2"></g:TextArea>
							</g:HTMLPanel>	
						</g:HTMLPanel>
						<g:InlineLabel ui:field="infoIcon" styleName="infoIcon hidden" />
					</g:HTMLPanel>
				</g:HorizontalPanel>
				<lace:ModificationButtonPresenter ui:field="modificationButton" visible="false" />
				<g:HTMLPanel ui:field="itemErrors" styleName="itemErrors hidden" />
				<g:HTML ui:field="itemDocumentation" styleName="itemDocumentation hidden" />		
			</g:HTMLPanel>
		</g:FocusPanel>
		<g:HTMLPanel ui:field="attributes" styleName="attributes"/>
	</g:HTMLPanel>

</ui:UiBinder>
