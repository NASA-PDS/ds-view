<?xml version="1.0" encoding="UTF-8"?>

<!--
  Harvest Tool Example Policy File

  This policy file corresponds with the dictionary attribute definitions 
  generated from the data model. By specifying the base path below, Harvest 
  crawls the directory structure recursively looking for files with an 
  extension of "xml".

  $Id$
-->

<policy>
  <directories>
    <path>$HOME/attribute_definitions</path>
    <filePattern>*.xml</filePattern>
  </directories>
  <validation>
    <enabled>false</enabled>
  </validation>
  <candidates>
    <namespace prefix="pds" uri="http://pds.nasa.gov/schema/pds4/pds/v04" default="true"/>
    <productMetadata objectType="Product_Attribute_Definition">
      <xPath>//Data_Standards/dd_version_id</xPath>
      <xPath>//Data_Standards/std_ref_version_id</xPath>
      <xPath>//Identification_Area_Product/alternate_title</xPath>
      <xPath>//Identification_Area_Product/alternate_id</xPath>
      <xPath>//Identification_Area_Product/last_modification_date_time</xPath>
      <xPath>//Identification_Area_Product/type</xPath>
      <xPath>//DD_Attribute_Full/name</xPath>
      <xPath>//DD_Attribute_Full/version_id</xPath>
      <xPath>//DD_Attribute_Full/class_name</xPath>
      <xPath>//DD_Attribute_Full/registration_authority_id</xPath>
      <xPath>//DD_Attribute_Full/steward_id</xPath>
      <xPath>//DD_Attribute_Full/name_space_id</xPath>
      <xPath>//DD_Attribute_Full/registered_by</xPath>
      <xPath>//DD_Attribute_Full/submitter_id</xPath>
      <xPath>//DD_Attribute_Full/definition</xPath>
      <xPath>//DD_Attribute_Full/attribute_concept</xPath>
    </productMetadata>
  </candidates>
</policy>
