<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='registry_ui'>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.standard.Standard'/>
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->
  

  <!-- Other module inherits                                      -->
  <inherits name='com.google.gwt.gen2.table.Table'/>
  <inherits name='com.google.gwt.widgetideas.GlassPanel'/>
  
  <!--  GWT LOGGING -->
  <inherits name='com.google.gwt.logging.Logging'/>
  <set-property name='gwt.logging.logLevel' value='FINEST'/>
  <set-property name='gwt.logging.enabled' value='TRUE'/>
  <!-- Logs to the popup which appears in the upper left hand corner -->
  <set-property name='gwt.logging.popupHandler' value='DISABLED'/>
  <!-- Logs to the javascript console, which is used by Firebug Lite(for IE), Safari and Chrome(?) -->
  <set-property name='gwt.logging.consoleHandler' value='DISABLED'/>
  <!-- Logs to stdout These messages can only be seen in Development Mode -->
  <set-property name='gwt.logging.systemHandler' value='DISABLED'/>
  <!-- Logs to Firebug -->
  <set-property name='gwt.logging.firebugHandler' value='DISABLED'/>
  <!-- logged by client side code to be stored on the server side -->
  <!-- This handler will send log messages to the server, where they will be logged using the server side logging mechanism -->
  <set-property name='gwt.logging.simpleRemoteHandler' value='DISABLED'/>
  
  <!-- for cookies -->
  <inherits name='com.google.gwt.http.HTTP'/>
  <!--inherits name='javax.servlet.http.HttpServletRequest'/-->
  
  <!-- 
    Inspired by Apache log4j PatternLayout:
    http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/PatternLayout.html
  -->
  <!--set-configuration-property name="log_pattern" value="(%F:%L) %d [%-5p] %m%n" /-->
  
  <!-- Specify the app entry point class.                         -->
  <!--entry-point class='gov.nasa.pds.registry.ui.client.Registry_ui'/-->
  
  <entry-point class='gov.nasa.pds.registry.ui.client.RegistryUI'/>
  
  <!-- example service servlet -->
  <!--servlet path="/products" class="gov.nasa.pds.registry.ui.server.ProductsServiceImpl"/>
  <servlet path="/services" class="gov.nasa.pds.registry.ui.server.ServiceBindingServiceImpl"/-->

  <!-- Specify the paths for translatable code -->
  <source path='client'/>
  <source path='shared'/>

  <stylesheet src='RegistryUI.css'/>
  <!--stylesheet src='ProductList.css'/-->
</module>
